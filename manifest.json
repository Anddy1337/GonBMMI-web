{
  "manifest_version": 3,
  "name": "YT Smart Skip: Sponsor & Highlights",
  "version": "0.3.1",
  "description": "Skip sponsor segments via SponsorBlock, visualize them on the timeline, and control auto-skip.",
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://m.youtube.com/*",
    "https://sponsor.ajay.app/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://m.youtube.com/*"
      ],
      "js": ["shared.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
